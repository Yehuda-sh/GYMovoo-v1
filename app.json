{
  "expo": {
    "name": "GYMovoo",
    "slug": "GYMovoo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "platforms": ["ios", "android", "web"],
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gymovoo.app"
    },
    "android": {
      "package": "com.gymovoo.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },

    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "האפליקציה צריכה גישה לתמונות שלך כדי לאפשר בחירת תמונת פרופיל | The app needs access to your photos to allow profile picture selection",
          "cameraPermission": "האפליקציה צריכה גישה למצלמה כדי לצלם תמונת פרופיל | The app needs access to your camera to take profile pictures"
        }
      ]
    ],

    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
